<% include partials/header %>

<div id="container">
    <div class="row">
        <div class="col">
            <div class="home">
                <span id="btn1"><i class="fa fa-spinner fa-pulse fa-5x fa-fw" aria-hidden="true"></i></span>
            </div>
        </div>
    </div>
</div>

<script>
var btn1 = document.getElementById("btn1");

if (navigator.geolocation) {
    navigator.geolocation.getCurrentPosition(showPosition);
} else { 
    btn1.innerHTML = "Geolocation is not supported by this browser.";
}

function showPosition(position) {
    btn1.innerHTML = '<a class="btn btn-lg btn-home" href="/random/' + position.coords.latitude + '/' + position.coords.longitude + '">Feed Me</a>';
}
</script>

